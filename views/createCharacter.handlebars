<main class="container">
    <h1>Welcome {{currentUser.dataValues.user_name}}!</h1>
    <h6>
        Do you dare to build a trash animal that can defeat our squad of trash
        animals? Choose your advantage wisely!
    </h6>

    <div class="row">
        <div class="col s12 offset-m3 m6">
            <div class="card" id="character-name-form">
                <div class="card-content">
                    <span class="card-title"></span>
                    <input placeholder="Enter your character name here." id="character_name" type="text"
                        class="validate" name="name" />
                </div>
                <div class="card-action">
                    <p id="advantage-text">Choose your advantage:</p>
                    <form action="#" id="advantage-chosen" name="name">
                        <p>
                            <label>
                                <input class="with-gap" name="advantage" type="radio" value="HP" hpStat="120" atkStat="15" defStat="10" />
                                <span>HP</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input class="with-gap" name="advantage" type="radio" value="defense" hpStat="100" atkStat="15" defStat="18" />
                                <span>DEFENSE</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input class="with-gap" name="advantage" type="radio" value="strength" hpStat="100" atkStat="20" defStat="10" />
                                <span>STRENGTH</span>
                            </label>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

